
.flash-box
  .notice グループを編集しました    
.wrapper
  .chat-side
    .side-header
      .side-header__box
        %p.side-header__box__user-name test-user
        %ul.side-header__box__menu
          %li.side-header__box__menu__new-group
          = link_to "group_new" do    
            %i.fa.fa-edit 
          %li.side-header__box__menu__edit-user
          = link_to "edit_user" do
            %i.fa.fa-cog
    .groups
      .group
        %p.group__group-name
          test-group
        %p.group__latest-message
          さようなら 
  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group
          test-group
        %ul.main-header__left-box__member-list
          Member :
          %li.main-header__left-box__member-list__member test-user            
        .main-header__edit-btn
          Edit   
    .messages
      .message
        .message__upper-info
          %p.message__upper-info__talker
            test-user
          %p.message__upper-info__date
            2019/08/11(sun)
        %p.message__text
          こんにちは！
    .form
      %form.new_message
        .input-box
          %input{:placeholder => "type a message", :class => "input-box__text", :type => "text", :neme => "message[content]", :id => "message_content"}
          %label.input-box__image               
            %i.fa.fa-image
            %input{:class => "input-box__image__file", :type => "file", :name => "message[image]", :id => "message_image"} 
        %input{:type => "submit", :name => "commit", :value => "Send", :class => "submit-btn"}  
          
            